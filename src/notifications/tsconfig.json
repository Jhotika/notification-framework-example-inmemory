{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "baseUrl": "src",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "noEmit": true
  },
  "include": [
    "./src/**/*.ts",
    "./lib/**/*.ts",
    "./configs/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.js"
  ]
}